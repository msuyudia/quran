<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quran" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/paper</item>
        <item name="colorPrimaryVariant">@color/dark_paper</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/paper</item>
        <item name="colorSecondaryVariant">@color/dark_paper</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Quran.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TopRoundedBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:theme">@style/Theme.Quran</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dialog_bottom_sheet_rounded</item>
    </style>

    <style name="text_paper_16" parent="Theme.Quran">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_paper_20" parent="Theme.Quran">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_paper_20_bold" parent="Theme.Quran">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_red_20_bold" parent="Theme.Quran">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="PrimaryButtonTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
    </style>

    <style name="PaperButtonTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_paper_button</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
    </style>

</resources>